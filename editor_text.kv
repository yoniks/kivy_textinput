#:import Clipboard kivy.core.clipboard.Clipboard


<MyFirstWidget>:
    orientation: 'horizontal'
    txt_input: txt_input

    Button:
        id: f_but
        size_hint: (.3, 1)
        text: 'status'
        font_size: 24
    TextInput:
        id: txt_input
        text: ''
        allow_copy: True
        base_direction: 'ltr'
        padding_x:[17,0]
        focus: True
        font_size: 20
        size_hint: (.7, 1)
        font_name: 'Arial'
        on_text: root.check_status()








